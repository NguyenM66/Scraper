	<h1>Saved Articles</h1>
	<div class="articles">
		{{#each article}}
			<div class="row article">
				<div class="col-sm-6">
					<div class="row">{{title}}</div>
					<div class="row">{{url}}</div>
					<div class="row">{{username}}</div>
				</div>
				<div class="col-sm-6">
					<button type='button' class='btn btn-danger noteBtn float-right' data-id='{{_id}}' data-toggle="modal" data-target="#notesModal">Article Notes</button>
					<button type='button' class='btn btn-primary deleteBtn float-right' data-id='{{_id}}' data-bool='false'>Delete Article</button>
				</div>
			</div>
		{{/each}}
	</div>

	<!-- Modal -->
	<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="modalLabel">Notes</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <textarea id="bodyinput" class="note" name="body"></textarea>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        <button type="button" id="saveNote" class="btn btn-primary" data-id="{{_id}}">Save Note</button>
	      </div>
	    </div>
	  </div>
	</div>

<script src="js/app.js"></script>